@model IEnumerable<Agric.Models.Notation>

@{
    ViewBag.Title = "Notations";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<script src="https://code.jquery.com/jquery-3.3.1.js"></script>

<div class="text-center"><h2>Notations </h2></div>
&nbsp;&nbsp;&nbsp;&nbsp;
@{
    var essai_id = ViewBag.id_essai;
}
<script type="text/javascript">
    ShowPopup = function () {
        window.open('/MyAdmin/AddNotation', "PopupWindow", new essai_id =@essai_id 'width=600px,height=600px,top=150,left=250');
    }
function myFunction() {
  confirm("Press a button!");
}

</script>
<div class="container-fluid" style="width: auto; overflow: auto; scrollbar-base-color: #ffeaff">

    <table class="table table-hover">
        <thead class="bg-primary text-light">
            <tr>
                <th style="min-width:130px ; text-align:center">
                    @Html.DisplayNameFor(model => model.D_N_P)
                </th>
                <th style="min-width:130px ; text-align:center">
                    @Html.DisplayNameFor(model => model.D_N_R)
                </th>
                <th style="min-width:130px ; text-align:center">
                    @Html.DisplayNameFor(model => model.Date_Add)
                </th>
                <th style="min-width:130px ; text-align:center">
                    @Html.DisplayNameFor(model => model.FNotation)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td style="  text-align:center">
                    @Html.DisplayFor(modelItem => item.D_N_P)
                </td>
                <td style="  text-align:center">
                    @Html.DisplayFor(modelItem => item.D_N_R)
                </td>
                <td style="  text-align:center">
                    @Html.DisplayFor(modelItem => item.Date_Add)
                </td>
                <td style="  text-align:center">
                    @if (item.FNotation != null)
                    {
                        @Html.ActionLink("Télécharger", "DownloadFNotation", new { Id = item.Id })
                    }
                </td>
                <td>
                    <div class="row">
                        <div class="col-12 ">
                            @Html.ActionLink("Modifier", "EditNotation", new { id = item.Id, essai_id = item.Essai_Id }, new { @class = "btn btn-primary btn-sm btn-block m-1" })
                        </div>
                  
                        <div class="col-12 ">
                            @Html.ActionLink("Supprimer", "DeleteNotation", new { id = item.Id, Essai_id = item.Essai_Id }, new { @class = "btn btn-danger btn-sm btn-block m-1", onclick = "return confirm('Supprimer ???');" })
                        </div>
                    </div>
                </td>
                
            </tr>
            }

        </tbody>
    </table>

</div>
<p>
        @Html.ActionLink("Ajouter", "AddNotation", new { essai_id = essai_id }, new { @class = "btn btn-primary btn-sm btn-block m-1", onclick = "ShowPopup();" })

</p>
