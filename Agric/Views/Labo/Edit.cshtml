@model Agric.Models.Essai

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LaboLayout.cshtml";
}

<div class="text-center"><h2>Remplir les champs vides !!!! </h2></div>
&nbsp;&nbsp;&nbsp;&nbsp;



<form action="Edit" method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        @Html.HiddenFor(model => model.UserId)
        @Html.HiddenFor(model => model.Rapport)
        @Html.HiddenFor(model => model.CodeClient)
        @Html.HiddenFor(model => model.TA)
        @Html.HiddenFor(model => model.Formulation)
        @Html.HiddenFor(model => model.DP)
        @Html.HiddenFor(model => model.MA)
        @Html.HiddenFor(model => model.PE)
        @Html.HiddenFor(model => model.Usage)
        @Html.HiddenFor(model => model.Formulation)
        @Html.HiddenFor(model => model.PR)
        @Html.HiddenFor(model => model.Produit)
        @Html.HiddenFor(model => model.Culture)
        @Html.HiddenFor(model => model.Cible)
        @Html.HiddenFor(model => model.Nb)
        @Html.HiddenFor(model => model.Region)
        @Html.HiddenFor(model => model.Code)
        @Html.HiddenFor(model => model.id_devis)
        @Html.HiddenFor(model => model.RapportRemis)
        @Html.HiddenFor(model => model.DateRemisRapport)
        @Html.HiddenFor(model => model.LaboName)
        @Html.HiddenFor(model => model.TechName)
        @Html.HiddenFor(model => model.DateRemisRapport)
        @Html.HiddenFor(model => model.DevisDemander)
        @Html.HiddenFor(model => model.Devis)
        @Html.HiddenFor(model => model.Payer50)
        @Html.HiddenFor(model => model.NonPayer)
        @Html.HiddenFor(model => model.Payer)
        @Html.HiddenFor(model => model.ACB)
        @Html.HiddenFor(model => model.FDS)
        @Html.HiddenFor(model => model.EtatEssai)

        @Html.HiddenFor(model => model.FNNotation)
        @Html.HiddenFor(model => model.FDEFicheEssai)
        @Html.HiddenFor(model => model.DPRéf)
        @Html.HiddenFor(model => model.FormulationProduitRéf)
        @Html.HiddenFor(model => model.Facture)
        @Html.HiddenFor(model => model.MARéf)
        @Html.HiddenFor(model => model.ComportementCulture)
        @Html.HiddenFor(model => model.TE)
        @Html.HiddenFor(model => model.DateNotation)
        @Html.HiddenFor(model => model.Date_Cloture)
        <div class="form-group">
            @Html.LabelFor(model => model.EtatPaiment, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.EtatPaiment, new List<SelectListItem>
                    ()
                    {
                    new SelectListItem() { Text = "Réalisé", Value = "True" },
                    new SelectListItem() { Text = "Non Réalisé", Value = "False"}
                    }, "En cours.....", new { @id = "flag", @class = "form-control" })
                @Html.ValidationMessageFor(model => model.EtatPaiment)
            </div>
        </div>












        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" class=" btn btn-primary btn-block"> Enregistrer </button>
            </div>
        </div>
    </div>
</form>
<div>
    @Html.ActionLink("Back to List", "Index")
</div>
