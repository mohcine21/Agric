                                            <h6 class="text-muted f-w-400"> @Html.DisplayFor(model => model.IsActive)</h6>
                                        </div>
                                    </div>
                                    <h6 class="m-b-20 m-t-40 p-b-5 b-b-default f-w-600"></h6>
                                    <div class="row">
                                        <div class="col-sm-6">
                                            <p class="m-b-10 f-w-600">Created on: </p>
                                            <h6 class="text-muted f-w-400">@Html.DisplayFor(model => model.CreatedOn)</h6>
                                        </div>
                                        <div class="col-sm-6">
